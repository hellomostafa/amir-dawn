<style>
    .my-acb {
        text-align: center;
        padding: {{ section.settings.acb_padding }}px 0;
        font-size: {{section.settings.font_size}}px;
    }
</style>

{% if section.settings.show_announcement %}


<div class="my-acb">
    {{ section.settings.acb_text }}
</div>

{% endif %}



{% schema %}
    {
        "name": "Announcement Bar",
        "settings" : [

            {
            "type": "checkbox",
            "id": "show_announcement",
            "label": "Show announcement",
            "default": true
            },
            {
            "type": "text",
            "id": "acb_text",
            "label": "Heading",
            "default": "Enter a Heading"
            },
            {
            "type": "range",
            "id": "acb_padding",
            "min": 6,
            "max": 24,
            "step": 1,
            "unit": "px",
            "label": "Padding",
            "default": 10
            },
            {
            "type": "range",
            "id": "font_size",
            "min": 6,
            "max": 24,
            "step": 1,
            "unit": "px",
            "label": "Font Size",
            "default": 10
            }



        ]

    }
{% endschema %}

